{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"experimentalDecorators": true,
		"baseUrl": "src",
		"paths": {
			"layout/*": [
				"./style/layout/*"
			],
			"animations/*": [
				"./style/animations/*"
			],
			"*": [
				"./js/*"
			]
		}
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}